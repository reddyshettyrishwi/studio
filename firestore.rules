
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData() {
      // It's safer to check for existence before accessing data
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      // Ensure the user document and role exist before checking
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && getUserData().role == 'Admin';
    }

    match /users/{userId} {
      // A user can read/write their own profile.
      // An admin can also get any user profile.
      allow get, write: if isOwner(userId) || isAdmin();

      // ANY authenticated user can query the users collection, but ONLY if they are querying for their OWN email.
      // This allows findUserByEmail to work post-login without opening up the whole collection.
      allow list: if isSignedIn() && request.query.get("where_flt_1") == ["email", "==", request.auth.token.email];
                       
      // A user can delete their own account. An admin can also delete accounts.
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId} {
        // An admin can list users, but ONLY if they are specifically querying for "Pending" users.
        // This is a separate match block to allow for a different list rule on the same path.
        allow list: if isAdmin() && request.query.get('where_flt_1') == ['status', '==', 'Pending'];
    }


    /**
     * @description Allows any signed-in user to manage agencies.
     */
    match /agencies/{agencyId} {
      allow read, write: if isSignedIn();
    }

    /**
     * @description Allows any signed-in user to manage influencer profiles.
     */
    match /influencers/{influencerId} {
      allow read, write: if isSignedIn();
    }

    /**
     * @description Allows any signed-in user to manage campaigns.
     */
    match /campaigns/{campaignId} {
      allow read, write: if isSignedIn();
    }
  }
}
